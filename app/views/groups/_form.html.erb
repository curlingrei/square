<%= form_with model: group, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group title">
    <%= f.label :group_name, 'タイトル' %>
    <%= f.text_field :group_name, class: 'form-control', placeholder: 'タイトルを入力してください' %>
  </div>
  <div class="form-group">
    <%= f.label :first_category, 'カテゴリ' %>
    <%= f.select :first_category, ['読書', '勉強(高校)', '勉強(大学・一般)', '勉強(語学)', '勉強(資格)', 'プログラミング'], include_blank: '選択してください', class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :group_description, '説明' %>
    <%= f.text_area :group_description, class: 'form-control', placeholder: 'タイトルを入力してください' %>
  </div>
    <%= f.hidden_field :default_img_ptn %>

<div class="row images clearfix">
  <div class="col-lg-2 col-4 float-left image">
    <img class="c-img", src="/assets/reading.jpg">
  </div>
  <div class="col-lg-2 col-4 float-left image">
    <img class="c-img", src="/assets/studying.jpg">
  </div>
  <div class="col-lg-2 col-4 float-left image">
    <img class="c-img", src="/assets/programing.jpg">
  </div>
  <div class="col-lg-2 col-4 float-left image">
    <img class="c-img", src="/assets/plant.jpg">
  </div>
  <div class="col-lg-2 col-4 float-left image">
    <img class="c-img", src="/assets/landscape.jpg">
  </div>
  <div class="col-lg-2 col-4 float-left image">
    <img class="c-img", src="/assets/landscape.jpg">
  </div>
</div>
<div class="form-group">
  <%= f.label :image, '画像' %>
  <%= f.file_field :image %>
</div>

<div class="form-group remove_check hide">
  <%= f.check_box :remove_image %>
  サンプル画像を使用する
</div>

<%= f.submit '確定', class: 'button' %>
<% end %>

<% if group.user == current_user %>
  <%= link_to '',group, method: :delete, data:{confirm: '本当に削除してよろしいですか?'}, class: 'fas fa-trash-alt' %>
<% end %>

<%= javascript_pack_tag 'groups/new' %>
<%= stylesheet_pack_tag 'groups/new' %>