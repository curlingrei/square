<%= form_with model: group, local: true do |f| %>
  <div class="form-wrapper">
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :group_name, '■タイトル(50文字以内)' %> <span class="text-danger">*</span></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.text_field :group_name, class: 'form-control', placeholder: 'タイトルを入力してください' %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :first_category, '■カテゴリ' %> <span class="text-danger">*</span></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.select :first_category, ['読書', '勉強(高校)', '勉強(大学・一般)', '勉強(語学)', '勉強(資格)', 'プログラミング'], {include_blank: '選択してください'}, class: 'form-control' %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :target_number, '■募集人数' %> <span class="text-danger">*</span></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.select :target_number, [1, 2, 3, 4, 5], {include_blank: '選択してください'}, class: 'form-control' %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :target_age, '■年齢' %></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.text_field :target_age, placeholder: '(例) 高校生, 20代, 10代~30代', class: 'form-control' %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :target_sex, '■性別' %></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.select :target_sex, ['男性のみ', '女性のみ', '男女不問'], {include_blank: '選択してください'}, class: 'form-control' %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :hope_time, '■希望時間帯' %></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.text_field :hope_time, placeholder: '(例) 土曜日の17時以降', class: 'form-control'%></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :group_description, '■紹介文' %> <span class="text-danger">*</span></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.text_area :group_description, class: 'form-control', placeholder: 'グループを紹介する文章を入力してください', rows: 5 %></p>
      </div>
    </div>
    <%= f.hidden_field :default_img_ptn %>
    <p>■グループ画像 <span class="text-danger">*</span>(サンプル画像から選択するかアップロードしてください)</p>
     
  <div class="row images clearfix">
    <div class="col-lg-2 col-4 float-left image">
      <img class="c-img", src="/images/reading.jpg">
    </div>
    <div class="col-lg-2 col-4 float-left image">
      <img class="c-img", src="/images/studying.jpeg">
    </div>
    <div class="col-lg-2 col-4 float-left image">
      <img class="c-img", src="/images/language.jpeg">
    </div>
    <div class="col-lg-2 col-4 float-left image">
      <img class="c-img", src="/images/programing.jpeg">
    </div>
    <div class="col-lg-2 col-4 float-left image">
      <img class="c-img", src="/images/plant.jpeg">
    </div>
    <div class="col-lg-2 col-4 float-left image">
      <img class="c-img", src="/images/landscape.jpg">
    </div>
    
  </div>
  <div class="file_field"><%= f.file_field :image %></div>

  <div class="form-group remove_check hide">
    <%= f.check_box :remove_image %>
    サンプル画像を使用する
  </div>

  <%= f.submit '確定', class: 'button' %>
  <% end %>
</div>

<%= javascript_pack_tag 'groups/new' %>
<%= stylesheet_pack_tag 'groups/new' %>