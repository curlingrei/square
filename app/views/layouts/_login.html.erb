<div class="modal" id="login" tabindex="-1" role="dialog" aria-labelledby="login-title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="login-title">ログイン</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
            <div class="form-group">
                <label for="email">メールアドレス</label>
                <input type="text" class="form-control" id="email" placeholder="(例)sosei@taro.com">
            </div>
            <div class="form-group">
                <label for="password">パスワード</label>
                <input type="text" class="form-control" id="password" placeholder="パスワードを入力してください">
            </div>
            <button type="button" class="btn btn-outline-primary w-100">ログイン</button>
        </form>
      </div>
    </div>
  </div>
</div>