<% if current_user.booklike?(bookpost) %>
  <%= form_with model: [bookpost, @likedbookpost], method: :delete do |f| %>
    <%= f.hidden_field :bookpost_id, :value => bookpost.id %>
    <%= f.submit '❤️', class: 'submit-btn' %><%= bookpost.booklikes.count %>
  <% end %>
<% else %>
  <%= form_with model: [bookpost, @booklike], method: :post do |f| %>
    <%= f.hidden_field :bookpost_id, :value => bookpost.id %>
    <%= f.submit '♡', class: 'submit-btn' %><%= bookpost.booklikes.count %>
  <% end %>
<% end %>