<h2 class="text-center">ログイン</h2>

<%= form_with scope: :session, url: login_path, local: true do |f| %>
  <div class="form-wrapper">
    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :email, '■メールアドレス' %> <span class="text-danger">*</span></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.email_field :email, class: 'form-control' %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4 col-12">
        <p><%= f.label :password, '■パスワード' %> <span class="text-danger">*</span></p>
      </div>
      <div class="col-sm-8 col-12">
        <p><%= f.password_field :password, class: 'form-control' %></p>
      </div>
    </div>
    <%= f.submit 'ログイン', class: 'button' %>
      <%= link_to 'ゲストログイン', guest_login_path, method: :post, class: 'btn btn-outline-secondary w-100 mt-3' %>
  </div>
<% end %>
  
<%= stylesheet_pack_tag 'users/new' %>
<%= javascript_pack_tag 'users/new' %>