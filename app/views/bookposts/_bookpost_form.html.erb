<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: bookpost, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control', placeholder: '本のタイトルを入力してください' %>
      </div>
      <div class="form-group">
        <%= f.label :category, 'ジャンル' %>
        <%= f.select :category, ['文学・評論', 'ノンフィクション', 'ビジネス・経済','歴史・地理', '政治・社会', '芸能・エンターテインメント', 'アート・建築・デザイン', '人文・思想・宗教', '暮らし・健康・料理', 'サイエンス・テクノロジー', '趣味・実用', '教育・自己啓発', 'スポーツ・アウトドア', '旅行・紀行', '絵本・児童書', '音楽'], 
                                {include_blank: '選択してください'},
                                 class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description, '説明' %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'この本の説明を書いてください' %>
      </div>
        <%= f.submit '確定', class: 'button' %>
    <% end %>
  </div>
</div>