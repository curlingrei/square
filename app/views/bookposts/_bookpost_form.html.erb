<h2 class="text-center">本紹介の新規投稿</h2>
  <%= form_with(model: bookpost, local: true) do |f| %>
    <div class="form-wrap">
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="row">
        <div class="col-sm-4 col-12">
          <p><%= f.label :title, '■タイトル(30文字以内)' %> <span class="text-danger">*</span></p>
        </div>
        <div class="col-sm-8 col-12">
          <p><%= f.text_field :title, class: 'form-control', placeholder: '本のタイトルを入力してください' %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 col-12">
          <p><%= f.label :category, '■ジャンル' %> <span class="text-danger">*</span></p>
        </div>
        <div class="col-sm-8 col-12">
            <p><%= f.select :category, ['文学・評論', 'ノンフィクション', 'ビジネス・経済','歴史・地理', '政治・社会', '芸能・エンターテインメント', 'アート・建築・デザイン', '人文・思想・宗教', '暮らし・健康・料理', 'サイエンス・テクノロジー', '趣味・実用', '教育・自己啓発', 'スポーツ・アウトドア', '旅行・紀行', '絵本・児童書', '音楽'], 
                                {include_blank: '選択してください'}, class: 'form-control' %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 col-12">
          <p><%= f.label :description, '■紹介文' %> <span class="text-danger">*</span></p>
        </div>
        <div class="col-sm-8 col-12">
          <p><%= f.text_area :description, class: 'form-control', placeholder: 'この本の紹介文を書いてください', rows: 5 %></p>
        </div>
      </div>

      <p class="mb-0"><%= f.label :bookimage, '■本の画像' %></p>
        <p><%= f.file_field :bookimage %></p>
      <p><%= f.check_box :remove_bookimage %> デフォルトの画像を使用する</p>

      <%= f.submit '投稿', class: 'button' %>
    </div>
  <% end %>
<%= javascript_pack_tag 'bookposts/new' %>
<%= stylesheet_pack_tag 'bookposts/new' %>