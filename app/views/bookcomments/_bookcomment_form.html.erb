<%= form_with model: [bookpost, @bookcomment]  do |f| %>
  <%= f.text_area :message, class: 'form-control', id: 'comment-form', placeholder: 'コメントを入力', rows: 2 %>
  <%= f.hidden_field :bookpost_id, :value => bookpost.id %>
  <%= f.submit '確定', class: 'btn-outline-primary', id: 'comment-submit' %>
<% end %>