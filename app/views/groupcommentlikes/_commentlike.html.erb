<% if current_user.comment_like?(comment) %>
  <%= form_with model: [@group, comment, comment.groupcommentlikes.find_by(groupcomment_id: comment.id)], method: :delete do |f| %>
    <%= f.hidden_field :group_id, :value => @group.id %>
    <%= f.hidden_field :groupcomment_id, :value => comment.id %>
    <%= f.submit '❤️', class: 'submit-btn' %><%= comment.groupcommentlikes.count %>
  <% end %>
<% else %>
  <%= form_with model: [@group, comment, @groupcommentlike], method: :post do |f| %>
    <%= f.hidden_field :group_id, :value => @group.id %>
    <%= f.hidden_field :groupcomment_id, :value => comment.id %>
    <%= f.submit '♡', class: 'submit-btn' %><%= comment.groupcommentlikes.count %>
  <% end %>
<% end %>